<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
        http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0 http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0
        http://karaf.apache.org/xmlns/shell/v1.0.0 http://karaf.apache.org/xmlns/shell/v1.0.0">
        
	<cm:property-placeholder persistent-id="com.soluvas.shell.xmpp" placeholder-prefix="$[" placeholder-suffix="]">
		<cm:default-properties>
			<cm:property name="serverHost" value="localhost"/>
			<cm:property name="username" value="karaf"/>
			<cm:property name="password" value=""/>
		</cm:default-properties>
	</cm:property-placeholder>
	
<!--     <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0"> -->
<!--         <command name="xmpp/hello"> -->
<!--             <action class="com.soluvas.shell.xmpp.Hello"> -->
<!--             </action> -->
<!--         </command> -->
<!--     </command-bundle> -->

	<bean id="xmppShell" class="com.soluvas.shell.xmpp.XmppShell"
		init-method="init" destroy-method="destroy">
		<property name="serverHost" value="$[serverHost]"/>
		<property name="username" value="$[username]"/>
		<property name="password" value="$[password]"/>
		<property name="commandProcessor">
			<reference interface="org.apache.felix.service.command.CommandProcessor"/>
		</property>
	</bean>

	<bean id="helloCommands" class="com.soluvas.shell.xmpp.XmppCommands" init-method="init"
		destroy-method="destroy">
		<property name="shell" ref="xmppShell"/>
	</bean>
	<service ref="helloCommands" auto-export="all-classes">
		<service-properties>
			<entry key="osgi.command.scope" value="xmpp"/>
			<entry key="osgi.command.function">
				<array value-type="java.lang.String">
					<value>hello</value>
					<value>connect</value>
					<value>disconnect</value>
				</array>
			</entry>
		</service-properties>
	</service>

</blueprint>
